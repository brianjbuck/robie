# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Docstrings and comments use max_line_length = 79
[*.py]
indent_size = 4
indent_style = space
max_line_length = 119

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab
